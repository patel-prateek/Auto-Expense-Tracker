<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@drawable/gradient_foreground</item>
        <item name="colorPrimaryDark">@drawable/gradient_background</item>
        <item name="colorAccent">@android:color/white</item>

        <!-- Change RecyclerView item colors -->
        <item name="android:colorControlNormal">@drawable/gradient_foreground</item>
        <item name="android:colorControlHighlight">@drawable/gradient_background</item>
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:statusBarColor">@drawable/gradient_foreground</item>
        <item name="android:background">@drawable/gradient_foreground</item>
        <item name="backgroundTint">@null</item>

    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
</resources>